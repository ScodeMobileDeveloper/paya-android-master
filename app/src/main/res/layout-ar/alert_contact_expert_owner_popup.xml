<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl"
    tools:ignore="LabelFor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="3dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/title_contact_expert_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/contact"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/close_contact_expert_owner"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="7dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/icon_close_black"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/your_name"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/editText_user_full_name_contact_expert_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:minHeight="40dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/your_email_address"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/editText_user_email_address_contact_expert_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:minHeight="40dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/phone"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layoutDirection="ltr"
                    android:background="@drawable/bg_edit_text"
                    android:orientation="horizontal">

                    <com.paya.paragon.utilities.CountryCode.CountryCodePicker
                        android:id="@+id/country_code_contact_expert_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:ccp_textGravity="RIGHT"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/editText_phone_contact_expert_owner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textDirection="rtl"
                        android:background="#FFFFFFFF"
                        android:inputType="number|phone"
                        android:labelFor="@+id/editText_phone_edit_agent_profile"
                        android:maxLength="13"
                        android:maxLines="1" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/enquiry"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/editText_user_message_contact_expert_owner"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="top"
                    android:lines="5"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/button_submit_contact_expert_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_button_yellow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingEnd="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="30dp"
                android:background="#00000000" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>