<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/background">

    <ScrollView
            android:layout_width="match_parent"
            android:background="@color/background"
            android:paddingBottom="10dp"
            android:clipToPadding="false"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1.1dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                            <com.paya.paragon.utilities.VerticalTextView
                                    android:id="@+id/featured_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#1e88e5"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:paddingEnd="25dp"
                                    android:paddingStart="25dp"
                                    android:rotation="180"
                                    android:text="@string/premium"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="9sp"
                                    android:visibility="gone"
                                    tools:ignore="SmallSp"/>

                            <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                <ImageView
                                        android:id="@+id/userCompanyLogo"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        tools:ignore="ContentDescription"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">

                                <TextView
                                        android:id="@+id/userCompanyName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="10"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textColor="@color/text_color_search"
                                        android:textSize="18sp"/>

                            </LinearLayout>

                            <TextView
                                    android:id="@+id/userYearOfInception"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/sub_text"
                                    android:textSize="14sp"/>

                            <TextView
                                    android:id="@+id/userCompanyUrlKey"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:textColor="@color/sub_text"
                                    android:textSize="14sp"/>

                            <TextView
                                    android:id="@+id/userAddress1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:textColor="@color/sub_text"
                                    android:textSize="14sp"/>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/userAboutMeLay"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/about_us"
                            android:textColor="@color/text_color_search"
                            android:textSize="15sp"/>
                    <TextView
                            android:id="@+id/userAboutMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/userSkillsLay"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/experience_and_skills"
                            android:textColor="@color/text_color_search"
                            android:textSize="15sp"/>
                    <TextView
                            android:id="@+id/userSkills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>