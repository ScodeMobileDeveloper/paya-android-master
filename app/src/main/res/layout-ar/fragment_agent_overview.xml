<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"
        android:background="@color/background">

    <ScrollView
            android:layout_width="match_parent"
            android:padding="15dp"
            android:clipToPadding="false"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="1dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1.1dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <com.paya.paragon.utilities.VerticalTextView
                                    android:id="@+id/featured_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#1e88e5"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:paddingEnd="25dp"
                                    android:paddingStart="25dp"
                                    android:rotation="180"
                                    android:text="@string/premium"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="9sp"
                                    android:visibility="gone"
                                    tools:ignore="SmallSp"/>

                            <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                <ImageView
                                        android:id="@+id/userCompanyLogo"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        tools:ignore="ContentDescription"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">

                                <TextView
                                        android:id="@+id/userCompanyName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="10"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textColor="@color/text_color_search"
                                        android:textSize="18sp"/>

                            </LinearLayout>

                            <TextView
                                    android:id="@+id/userYearOfInception"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/sub_text"
                                    android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Details view-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/propertyUnitBedRooms12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/deals_in"
                            android:textColor="@color/text_color_search"
                            android:textSize="15sp"/>

                    <TextView
                            android:id="@+id/dealsIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/address"
                            android:textColor="@color/text_color_search"
                            android:textSize="15sp"/>

                    <TextView
                            android:id="@+id/userAddress1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/userAddress2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/userRegNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userCompanyUrlLay"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/website"
                                android:textColor="@color/sub_text"
                                android:textSize="14sp"/>

                        <TextView
                                android:id="@+id/userCompanyUrlKey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/text_color_search"
                                android:textSize="14sp"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/agentFollow"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="7dp"
                            android:background="@drawable/background_button_yellow"
                            android:drawableStart="@drawable/icon_follow_user"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:minHeight="25dp"
                            android:paddingEnd="8dp"
                            android:paddingStart="8dp"
                            android:text="@string/follow"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/background"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                        <ImageView
                                android:id="@+id/userProfilePicture"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                        />
                    </RelativeLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/agent"
                                android:textColor="@color/sub_text"
                                android:textSize="15sp"/>

                        <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/text_color_search"
                                android:textSize="15sp"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/userAboutMeLay"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/about_us"
                            android:textColor="@color/text_color_search"
                            android:textSize="15sp"/>
                    <TextView
                            android:id="@+id/userAboutMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/userSkillsLay"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/experience_and_skills"
                            android:textColor="@color/text_color_search"
                            android:textSize="15sp"/>
                    <TextView
                            android:id="@+id/userSkills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_text"
                            android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                    android:id="@+id/mask"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
            />

        </androidx.cardview.widget.CardView>

    </ScrollView>

</RelativeLayout>