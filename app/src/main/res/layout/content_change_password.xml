<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.dashboard.ChangePasswordActivity"
    tools:showIn="@layout/activity_change_password">

    <TextView
        android:id="@+id/tv_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/current_password"
        android:textColor="@color/text_color_search"
        android:textSize="13sp"
        />


    <androidx.cardview.widget.CardView
        style="@style/CardViewRounded"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/current_password"
            style="@style/editTextSignin"
            android:inputType="textPassword" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/new_password"
        android:textColor="@color/text_color_search"
        android:textSize="13sp" />


    <androidx.cardview.widget.CardView
        style="@style/CardViewRounded"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/edt_new_password"
            style="@style/editTextSignin"
            android:inputType="textPassword" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:text="@string/confirm_password"
        android:textColor="@color/text_color_search"
        android:textSize="13sp" />

    <androidx.cardview.widget.CardView
        style="@style/CardViewRounded"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/edt_confirm_password"
            style="@style/editTextSignin"
            android:inputType="textPassword" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_text_yellow_solid"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/change"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="16sp" />
</LinearLayout>