<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_underline_gray"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/property_name_item_enquiry_listing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2, 3 Bed Flat for Rent"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/offer_price_item_enquiry_listing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer Price: AED : 3,86,000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/enquiry_user_name_item_enquiry_listing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/icon_user"
            android:text="Don Thomas"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/enquiry_user_email_item_enquiry_listing"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rajesh@gmail.com"
                        android:textSize="13sp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/icon_email"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <TextView
                        android:id="@+id/enquiry_user_phone_item_enquiry_listing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 9876543210"
                        android:textSize="13sp"
                        android:layout_marginStart="15dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/icon_phone"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/expand_item_enquiry_listing"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/icon_plus" />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_expanded_message_item_enquiry_listing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_message"/>

        <TextView
            android:id="@+id/enquiry_message_item_enquiry_listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="it is a long established fact that reader  will be distracted by"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>