    <com.chaos.view.PinView
        android:id="@+id/otp_pin_view"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:inputType="number"
        android:hint=""
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cursorColor="@color/gray"
        app:cursorWidth="2dp"
        app:itemCount="6"
        android:layout_marginTop="20dp"
        app:itemHeight="35dp"
        app:itemRadius="10dp"
        app:itemSpacing="10dp"
        app:itemWidth="35dp"
        app:lineColor="@color/gray"
        app:lineWidth="1.2dp"
        app:viewType="rectangle"

        />

    <TextView
        android:id="@+id/text_verify_requirement_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_yellow"
        android:gravity="center"
        android:minHeight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/confirm"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/skip"
        android:textColor="@color/text_color_search"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_resend_otp_requirement_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/resend_text"
        android:textColor="#555"
        android:textSize="18sp" />

</LinearLayout>