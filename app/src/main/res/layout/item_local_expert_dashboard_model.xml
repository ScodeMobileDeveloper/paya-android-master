<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_item_local_expert_category"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/edit_text_right_line_gray"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:id="@+id/tv_local_expert" />
    <TextView
        android:id="@+id/text_local_expert_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:text=""/>
        <!--android:drawableTop="@drawable/loc_exp_carpendry" -->

</LinearLayout>